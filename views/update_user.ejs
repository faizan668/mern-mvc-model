<!-- Header -->
<%- include('include/_header') %>
<!-- /Header -->


    <!-- Main site -->
    <main id="site-main">
        <div class="container newUser">
            <div class="box-nav d-flex-justify-between">
               <div class="filter">
                   <a href="/"><i class="fas fa-angle-double-left"></i> All Users</a>
               </div>
            </div>

            <div class="form-title text-center">
                <h2 class="text-dark">Update User</h2>
                <span class="text-light"> Use a below form to Update an account</span>
            </div>
            <!-- /Main site -->

            <!-- Add user form -->
            <!-- form handling -->
<form  method="post" id="update_user">
    <div class="container">
        <div class="row col-md-6">
            <img src="/assets/img/logo" />
        </div>
        <div class="row col-md-6">
            <div class="new_user">
                <div class="form-group">
                    <label for="name" class="text-light">Name</label>
                    <input type="hidden" name="id" value="<%= user._id %>">
                    <input type="text" name="name" value="<%= user.name %>" placeholder="Muhammad Faizan">
                </div>
                <div class="form-group">
                    <label for="Email" class="text-light">Email</label>
                    <input type="text" name="Email" value="<%= user.email %>" placeholder="Email@gmail.com">
                </div>
                <div class="form-group">
                    <label for="phone" class="text-light">Phoene no</label>
                    <input type="text" name="phone" value="<%= user.phone %>" placeholder="****-*******">
                </div>
                <div class="form-group">
                    <label for="city" class="text-light">city</label>
                    <input type="text" name="city" value="<%= user.city %>" placeholder="Sukkur">
                </div>
                <div class="form-group">
                    <label for="postcode" class="text-light">postcode</label>
                    <input type="text" name="postcode" value="<%= user.Postcode %>" placeholder="Sukkur">
                </div>
        
        </div>
    </div>
    
       

        

        <div class="form-group">
            <button type="submit" class="btn btn-primary text-dark update">Save</button>
        </div>

    </div>
</form>
<!-- /form  handling-->
            
        </div>
    </main>

